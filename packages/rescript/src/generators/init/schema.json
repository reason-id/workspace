{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "NxRescript",
  "title": "Init Rescript Plugin",
  "type": "object",
  "properties": {
    "unitTestRunner": {
      "description": "Adds the specified unit test runner",
      "type": "string",
      "enum": ["jest", "none"],
      "default": "jest"
    },
    "genType": {
      "description": "Enable genType into the project",
      "type": "boolean",
      "default": false
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    }
  },
  "required": []
}
